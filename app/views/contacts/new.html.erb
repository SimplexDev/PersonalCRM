<div class="row">
  <div class="columns medium-8 medium-centered">

    <h1 class="page-header">Add New Contact</h1>

    <% if @errors %>
      <div class="panel callout alert">
        <ul>
          <% @errors.each do |error|%>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <%end%>

    <%= form_for(@contact, :html => { :class => 'form', :id => "new_contact_form" }) do |f|  %>
    <div class="field">
      <%= f.label :first_name, class: "label" %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name, class: "label" %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :phone_number, class: "label" %><br />
      <%= f.text_field :phone_number %>
    </div>

    <div class="field">
      <%= f.label :email, :class => "label" %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :location, :class => "label" %><br />
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label :company, :class => "label" %><br />
      <%= f.text_field :company %>
    </div>

    <div class="field">
      <%= f.label :past_company, :class => "label" %><br />
      <%= f.text_field :past_company %>
    </div>

    <div class="field">
      <%= f.label :industry, class: "label" %><br />
      <%= f.text_field :industry %>
    </div>

    <div class="field">
      <%= f.label :how_met, :class => "label" %><br />
      <%= f.text_field :how_met %>
    </div>

    <div class="field">
      <%= f.label :last_contacted, :class => "label" %><br />
      <%= f.text_field :last_contacted, wrapper: {class: 'datepicker'} %>
    </div>

    <div class="field">
      <%= f.label :follow_up, :class => "label" %><br />
      <%= f.text_field :follow_up %>
    </div>

    <div class="field">
      <%= f.label :birthday, :class => "label" %><br />
      <%= f.text_field :birthday %>
    </div>

    <div class="field">
      <%= f.label :family_details, :class => "label" %><br />
      <%= f.text_field :family_details %>
    </div>

      <div class="actions">
        <%= f.submit "Add Contact", class: "button form-submit" %>
      </div>
    <% end %>

  </div>
